{% extends 'base.html.twig' %}

{% block title %}Activité{% endblock %}

{% block body %}
    <h1>Activité</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activity.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ activity.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activity_index') }}">Retour à la liste</a>

    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}">editer</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}

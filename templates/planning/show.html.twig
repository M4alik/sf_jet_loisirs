{% extends 'base.html.twig' %}

{% block title %}Planning{% endblock %}

{% block body %}
    <h1>Planning</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ planning.id }}</td>
            </tr>
            <tr>
                <th>Date_debut</th>
                <td>{{ planning.dateDebut ? planning.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nb_jours</th>
                <td>{{ planning.nbJours }}</td>
            </tr>
            <tr>
                <th>Duree_crenau</th>
                <td>{{ planning.dureeCrenau }}</td>
            </tr>
            <tr>
                <th>Duree_journee</th>
                <td>{{ planning.dureeJournee }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_planning_index') }}">back to list</a>

    <a href="{{ path('app_planning_edit', {'id': planning.id}) }}">edit</a>

    {{ include('planning/_delete_form.html.twig') }}

{% extends 'base.html.twig' %}

{% block title %}Hello ReserverController!{% endblock %}

{% block body %}
    <h1>Planning</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_debut</th>
                <th>Nb_jours</th>
                <th>Duree_crenau</th>
                <th>Duree_journee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planning in plannings %}
        {% if planning.status == true %}
            <tr>
                <td>{{ planning.id }}</td>
                <td>{{ planning.dateDebut ? planning.dateDebut|date('d / m / Y H:i:s') : '' }}</td>
                <td>{{ planning.nbJours }}</td>
                <td>{{ planning.dureeCrenau }}</td>
                <td>{{ planning.dureeJournee }}</td>
                <td>
                    <a href="{{ path('app_reserver_creneau', {'planning': planning.id}) }}">Choisir</a>
                </td>
            </tr>
        {% endif %}
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
